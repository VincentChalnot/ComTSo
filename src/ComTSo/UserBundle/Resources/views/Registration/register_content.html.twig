{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<h1 class="text-center">{{ get_brand_name() }}</h1>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Inscription</h3>
            </div>
            <div class="panel-body">
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post" accept-charset="UTF-8" role="form" class="form-horizontal">
                    {{ form_widget(form) }}
                    <div class="btn-group pull-right">
                        <a href="{{ path('fos_user_security_login') }}" class="btn btn-default">Retour</a>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
