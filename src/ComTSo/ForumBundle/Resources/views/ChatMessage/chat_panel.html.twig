<div class="panel panel-default" id="chat-panel" style="display:none;">
    <div class="panel-heading">
        <a href="#" data-toggle="collapse">Chat</a>
        <div class="users pull-right">
            Online : <span id="chat-connected-users"></span>
        </div>
        <div class="clear"></div>
    </div>
    <div class="panel-body" id="chat-box"></div>
    <div class="panel-footer">
        <form action="{{ path('comtso_chat') }}" class="row" method="post" role="form">
            <div class="col-md-10 col-xs-8">
                <input type="text" name="message" class="form-control input-sm" id="chat-message-new" placeholder="...">
            </div>
            <div class="col-md-2 col-xs-3">
                <button type="submit" class="btn btn-default btn-sm">Envoyer</button>
            </div>
        </form>
    </div>
</div>
<div class="hidden" id="chat-connected-user-template">
    <a class="avatar avatar-xs" href="#">
        <div class="avatar-default img-circle">
            <i class="fa fa-user" title=""></i>
        </div>
    </a>
</div>
<div class="hidden" id="chat-message-template">
    <div class="row chat-message">
        <div class="col-sm-2 col-xs-1">
            <a class="avatar avatar-xs" href="#">
                <div class="avatar-default img-circle">
                    <i class="fa fa-user" title=""></i>
                </div>
                <span class="username"></span>
            </a>
        </div>
        <div class="col-sm-10 col-xs-10"><time class="hidden-sm"></time><p></p></div>
    </div>
</div>
