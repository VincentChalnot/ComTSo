<tr id="photo-selector-{{ photo.id }}">
	<td>{% include 'ComTSoForumBundle:Photo:thumbnail.html.twig' with {'filter': 'tiny'} %}</td>
	<td><a href="{{ photo|path }}">{% if query is defined %}{{ photo.title|highlight(query, true) }}{% else %}{{ photo.title }}{% endif %}</a></td>
	<td>{% include 'ComTSoForumBundle:User:avatar.html.twig' with {'author': photo.author, size: 'sm'} %}</td>
	<td>
		<dl class="dl-horizontal dl-small">
			<dt>Prise :</dt><dd>{{ photo.takenAt|htmlDate }}</dd>
			<dt>Upload :</dt><dd>{{ photo.createdAt|htmlDate }}</dd>
		</dl>
	</td>
	<td>
		<div class="btn-group">
			<button type="submit" class="btn btn-primary" title="Sélectionner la photo">
				<span>Sélectionner</span>
			</button>
			<button type="button" class="btn btn-danger delete" title="Supprimer la photo">
				<i class="fa fa-trash-o"></i>
			</button>
		</div>
	</td>
</tr>